5 RETM = 1
10 CLS : SCREEN 2
20 ' EXEC "MP3","PLAY", INT(RND*63)
50 DATAF "juke","MPUS","MPNUM$","MPNAM$"
60 CLS
80 MPU = INT(RND*MPUS)+1
90 VOL = 10 : CPT=1
100 LOCATE 4,4 : ? "Playing ";MPNAM$(MPU)
105 DRAWSPRT "SYSMENU",(320-64)/2,(240-64-64),64,64,0,64
